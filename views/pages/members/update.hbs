<div class="container">
    <a href="/">
        <h3>Home page</h3>
    </a>
    <h2>UPDATE USER</h2>
    <form action="/members/update/{{member._id}}" method="POST">
        <div class="form-group">
            <label>User ID</label>
            <input class="form-control" type="text" name='memberID' value="{{member._id}}" readonly>
        </div>
        <div class="form-group">
            <label>Username</label>
            <input class="form-control" type="text" name='memberUsername' value="{{member.username}}">
        </div>
        <div class="form-group">
            <label>Full name</label>
            <input class="form-control" type="text" name='memberFullName' value="{{member.fullname}}">
        </div>
        <div class="form-group">
            <label>Gender</label>
            <input class="form-control" type="text" name='memberGender' value="{{member.gender}}">
        </div>
        <div class="form-group">
            <label>Age</label>
            <input class="form-control" type="text" name='memberAge' value="{{member.age}}">
        </div>
        <input id="update-btn" class="btn btn-primary" type="submit" value="UPDATE">
        <input id="update-btn" class="btn btn-secondary" type="button" value="DELETE"
                onclick="handleDeleteProduct('{{member._id}}')">
    </form>
</div>
<script>
    function handleDeleteProduct(value) {
        $.ajax({
            url: '/members/update/' + value,
            type: 'DELETE',
            success: function (result) {
                $(location).attr('href', '/members');
            }
        })
    }
</script>