<div class="container">
    <a href="/members"><h3>All users</h3></a>
    <h2>ADD USER</h2>
    <form action="/members/add" method="POST">
        <div class="form-group">
            <label>Username</label>
            <input class="form-control" 
                type="text" 
                name="userName"
                placeholder="Enter username">
        </div>
        <div class="form-group">
            <label>Full name</label>
            <input class="form-control" type="text" name='userFullName'>
        </div>
        <div class="form-group">
            <label>Gender</label>
            <input class="form-control" type="text" name='userGender'>
        </div>
        <div class="form-group">
            <label>Age</label>
            <input class="form-control" type="text" name='userAge'>
        </div>
        <input id="add-btn" class="btn btn-primary" type="submit" value="ADD USER">
    </form>
</div>